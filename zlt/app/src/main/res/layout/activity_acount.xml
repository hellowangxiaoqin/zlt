<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.com.zlt.AcountActivity">
    <LinearLayout
        android:background="#F1F1F3"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/ac_fanhui"
            android:background="#4285F4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/back_problem"
                android:layout_marginTop="13dp"
                android:src="@drawable/back_bai"
                android:layout_width="23dp"
                android:layout_height="23dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="账户与安全"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的账户"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="#E5E5E5"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="12dp"
                android:textColor="#708090"
                android:textSize="20dp"
                android:text="手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/ac_ophone"
                android:textColor="#708090"
                android:textSize="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="120dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ac_changeOphone"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#708090"
                android:textSize="20dp"
                android:text="变更手机号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_marginLeft="240dp"
                android:src="@drawable/right_jiantou"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ac_password"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#708090"
                android:textSize="20dp"
                android:text="密码管理"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="260dp"
                android:src="@drawable/right_jiantou"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ac_securityMail"
            android:layout_marginTop="15dp"
            android:background="@drawable/border"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:textColor="#708090"
                android:textSize="20dp"
                android:text="安全邮箱"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="13dp"
                android:layout_marginLeft="260dp"
                android:src="@drawable/right_jiantou"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
