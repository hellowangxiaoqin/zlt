<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.com.zlt.SendCode">
    <LinearLayout
        android:background="#F1F1F3"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <LinearLayout
            android:id="@+id/sc_fanhui"
            android:background="#4285F4"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_marginLeft="3dp"
                android:id="@+id/back_problem"
                android:layout_marginTop="13dp"
                android:src="@drawable/back_bai"
                android:layout_width="23dp"
                android:layout_height="23dp"/>
            <TextView
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:text="发送验证码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:text="+86"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/sc_phone"
                android:background="@null"
                android:textSize="18dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                android:layout_width="200dp"
                android:layout_height="40dp" />
            <ImageView
                android:id="@+id/edit_cancel_number"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/cancel"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
        <LinearLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/code"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="12dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="请输入短信验证码"/>
        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/sendCode"
            android:text="发送验证码"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/shape1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <Button
                android:textColor="#FFFFFF"
                android:id="@+id/sc_change"
                android:text="修改"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
