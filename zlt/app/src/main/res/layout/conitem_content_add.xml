<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/itembg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#33B5E5">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:gravity="center">
            <Button
                android:id="@+id/btn_conadd_quit"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#33B5E5"
                android:text="返回"
                android:textSize="17dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <TextView
            android:layout_weight="6.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="联系人详情"
            android:textSize="21dp"
            android:textColor="#ffffff"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
        <LinearLayout
            android:layout_weight="1.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_top_bg">
            <Button
                android:id="@+id/btn_conitem_modify"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#33B5E5"
                android:text=""
                android:textSize="17dp"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/itembg">
        <ImageView
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/tongxunlu"/>
        <TextView
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="通讯录"
            android:textColor="#9C9C9C"
            android:paddingLeft="15dp"
            android:paddingTop="7dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/itemsbg">
        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textSize="23dp"
            android:paddingTop="15dp"
            android:paddingLeft="30dp"
            android:textColor="#000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="电话"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="河北沧州"
                android:textColor="#9C9C9C"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"/>
            <TextView
                android:id="@+id/item_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/itemsbg">
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/itemsbg">
                <Button
                    android:id="@+id/btn_phone"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/phone"/>
                <Button
                    android:id="@+id/btn_msg"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:background="@drawable/msg"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="E-mail"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="地址"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingLeft="5dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_con_addfriend"
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="添加好友"
            android:textSize="17dp"
            android:textColor="#33B5E5"
            android:background="#ffffff"/>

    </LinearLayout>
</LinearLayout>
