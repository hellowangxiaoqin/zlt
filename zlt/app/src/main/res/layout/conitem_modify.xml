<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/itembg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/item_top_bg">
        <LinearLayout
            android:layout_weight="1.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_top_bg">
        <Button
            android:id="@+id/btn_cancel"
            android:layout_weight="1.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/item_top_bg"
            android:text="取消"
            android:textSize="17dp"
            android:textColor="#3be02e"/>
        </LinearLayout>
        <TextView
            android:layout_weight="6.8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="联系人详情"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:gravity="center"/>
        <LinearLayout
            android:layout_weight="1.7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/item_top_bg">
            <Button
                android:id="@+id/btn_complete"
                android:layout_weight="1.7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/item_top_bg"
                android:text="完成"
                android:textSize="17dp"
                android:textColor="#3be02e"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:background="@drawable/itembg">
        <ImageView
            android:layout_weight="1.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/card"/>
        <TextView
            android:layout_weight="8.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="移动"
            android:textColor="#9C9C9C"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="姓名"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mod_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="电话"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mod_phone"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="E-mail"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="15dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mod_email"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/itemsbg"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="地址"
            android:textColor="#000000"
            android:gravity="center"
            android:paddingLeft="5dp"/>
        <LinearLayout
            android:layout_weight="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <EditText
                android:id="@+id/mod_address"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"
                android:textSize="18dp"
                android:textColor="#000000"
                android:paddingLeft="15dp"
                android:paddingTop="13dp"
                android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
