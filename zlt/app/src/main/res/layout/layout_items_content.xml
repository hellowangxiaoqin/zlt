<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/con_msg_time"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="#79ffffff"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:paddingTop="2dp"/>
        <Button
            android:id="@+id/btn_content_main"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:textSize="20dp"
            android:textColor="#F8F8FF"
            android:gravity="bottom"
            android:paddingLeft="15dp"
            android:paddingBottom="8dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0ef">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_contnet_2"
                style="@style/con_btn_etc"/>
            <ImageView
                android:id="@+id/img_content_2"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:foregroundGravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0ef">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_contnet_3"
                style="@style/con_btn_etc"/>
            <ImageView
                android:id="@+id/img_content_3"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:foregroundGravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0ef">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_contnet_4"
                style="@style/con_btn_etc"/>
            <ImageView
                android:id="@+id/img_content_4"
                android:layout_weight="1.8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_gravity="center"
                android:foregroundGravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eff0ef">
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
